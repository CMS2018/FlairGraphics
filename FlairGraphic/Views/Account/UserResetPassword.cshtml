@using DeveloperCRM.Base.Models;

@{
    Layout = null;

}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <meta charset="utf-8" />
    <title>Agency CRM</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, shrink-to-fit=no" />
    @*<link rel="apple-touch-icon" href="pages/ico/60.png">
        <link rel="apple-touch-icon" sizes="76x76" href="pages/ico/76.png">
        <link rel="apple-touch-icon" sizes="120x120" href="pages/ico/120.png">
        <link rel="apple-touch-icon" sizes="152x152" href="pages/ico/152.png">*@
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-touch-fullscreen" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta content="" name="description" />
    <meta content="" name="author" />
    <link href="~/Content/assets/plugins/pace/pace-theme-flash.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/plugins/font-awesome/css/font-awesome.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/plugins/jquery-scrollbar/jquery.scrollbar.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/Content/assets/plugins/select2/css/select2.min.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/Content/assets/plugins/switchery/css/switchery.min.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/Content/pages/css/pages-icons.css" rel="stylesheet" type="text/css">
    <link class="main-stylesheet" href="~/Content/pages/css/pages.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
        window.onload = function () {
            // fix for windows 8
            if (navigator.appVersion.indexOf("Windows NT 6.2") != -1)
                document.head.innerHTML += '<link rel="stylesheet" type="text/css" href="~/Content/pages/css/windows.chrome.fix.css" />'
        }
    </script>
</head>
<body class="fixed-header ">
    <div class="login-wrapper ">
        <!-- START Login Background Pic Wrapper-->
        <div class="bg-pic">
            <!-- START Background Pic-->
            <img src="~/Content/assets/img/demo/new-york-city-buildings-sunrise-morning-hd-wallpaper.jpg" data-src="../../Content/assets/img/demo/new-york-city-buildings-sunrise-morning-hd-wallpaper.jpg" data-src-retina="../../Content/assets/img/demo/new-york-city-buildings-sunrise-morning-hd-wallpaper.jpg" alt="" class="lazy">
            <!-- END Background Pic-->
            <!-- START Background Caption-->
            <div class="bg-caption pull-bottom sm-pull-bottom text-white p-l-20 m-b-20">
                <h2 class="semi-bold text-white">
                    Agency CRM make it easy to enjoy what matters the most in the life
                </h2>

            </div>
            <!-- END Background Caption-->
        </div>

        <div class="login-container bg-white" id="SignIN">
            <div class="p-l-50 m-l-20 p-r-50 m-r-20 p-t-50 m-t-30 sm-p-l-15 sm-p-r-15 sm-p-t-40">
                <img src="~/Content/assets/img/logo.png" alt="logo" data-src="../../Content/assets/img/logo.png" data-src-retina="../../Content/assets/img/logo.png" width="78" height="22">
                <p class="p-t-35">Reset Your Account Password</p>
                <!-- START Login Form -->
               @using (Html.BeginForm("UserResetPassword", "Account", FormMethod.Post, new { id = "form-resetPassword" }))
                {
                    <div class="form-group form-group-default">
                        <label>User Name</label>
                        <div class="controls">
                            @ViewBag.UserName
                        </div>
                    </div>
                    <div class="form-group form-group-default">
                        <label>Email ID</label>
                        <div class="controls">
                            @ViewBag.EmailID
                        </div>
                    </div>

                    <div class="form-group form-group-default">
                        <label>Login ID</label>
                        <div class="controls">
                            @ViewBag.loginID
                        </div>
                    </div>
                     <div class="form-group form-group-default">
                        <label>Business Name</label>
                        <div class="controls">
                            @ViewBag.BusinessName
                        </div>
                    </div>
                    <div class="form-group form-group-default">
                        <label>Password</label>
                        <div class="controls">
                            <input type="password" class="form-control" id="password" minlength="4" maxlength="50" name="password" placeholder="Credentials" required>
                        </div>
                    </div>

                    <input type="hidden" id="userID" name="userID" value="@ViewBag.userID" />
                    <input type="hidden" id="key" name="key" value="@ViewBag.key" />
                    <button class="btn btn-primary btn-cons m-t-10" type="submit">Reset Password</button>
                }
                <!--END Login Form-->



            </div>
        </div>






    </div>

    <div id="divApplicationMessage" class="alertDivPosition">




    </div>
    <div id="loading" class="loadingGlobalVisiable">
        <div class="loadingImg">
            <img src=@Url.Content("~/Base/content/images/windows8.gif") border="0" />
            <p style="text-align: center; font-size:13px; color:#0094ff;"><strong>Loading...</strong></p>

        </div>

    </div>
    <!-- BEGIN VENDOR JS -->
    <script src="~/Content/assets/plugins/pace/pace.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/jquery/jquery-1.11.1.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/modernizr.custom.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/jquery-ui/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/tether/js/tether.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/jquery/jquery-easy.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/jquery-unveil/jquery.unveil.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/jquery-ios-list/jquery.ioslist.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/jquery-actual/jquery.actual.min.js"></script>
    <script src="~/Content/assets/plugins/jquery-scrollbar/jquery.scrollbar.min.js"></script>
    <script type="text/javascript" src="~/Content/assets/plugins/select2/js/select2.full.min.js"></script>
    <script type="text/javascript" src="~/Content/assets/plugins/classie/classie.js"></script>
    <script src="~/Content/assets/plugins/switchery/js/switchery.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>
    <!-- END VENDOR JS -->
    <script src="~/Content/pages/js/pages.min.js"></script>
    <script>
        $(function () {
            $('#form-resetPassword').validate();

        })
    </script>
    <!--DIGIMIND Custom JS -->
    <script src="~/Base/Content/js/DIGIMINDBase.js"></script>
    <script src="~/Base/Content/js/Base.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {


            jQuery('#loading').hide();


            base.showMessage('', '', '', '', 0);




        });


        $(document).ajaxStart(function () {
            jQuery('#loading').show(); // show the gif image when ajax starts
        }).ajaxStop(function () {
            jQuery('#loading').hide(); // hide the gif image when ajax completes
        });
    </script>
    <script type="text/javascript">
        function LoginID_isExist() {
            StUtil.IsExist({
                ctrlId: 'LoginID',
                controllerName: 'Json',
                actionName: 'IsLoginIDExist',
                parmVal: $('#LoginID').val()
            });
        }
    </script>
</body>
</html>




