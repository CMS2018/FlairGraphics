<style>
    .card_number {
        float: right;
        position: absolute;
        right: 17px;
        bottom: 11px;
    }

        .card_number div {
            width: 20px;
            background-color: #87cb03;
            height: 20px;
            text-align: center;
            color: #fff;
            border-radius: 50%;
            display: inline-block;
        }

    .unansred div {
        background-color: #f4071d;
    }
    .rsolv div {
        background-color: #3949ab;
    }
