<div class="row">
    <div class="col-lg-4">

        <div class="sub-box subb-box">
            <a href="~/Masters/AllQuestions/1">
                <div class="icon-back-primary leadd" title="Total Qestions">
                    <i class="fa fa-question-circle"></i>
                </div>
            </a>

            <div class="dash-simple">
                <div class="dash-simple-count">
                    <span class="timer count-title count-number ks-count" data-speed="1500">@ViewBag.AllQuesCount</span>
                    <span class="ks-count-icon"> <i class="fa fa-arrow-up leadd"></i></span>
                </div>
                <div class="count-item-description">
                    Question Log
                </div>
            </div>
            <div class="card_number">
                <a href="~/Masters/AllQuestions/2" title="Total Answered Questions" class="ansred"> <div>  @ViewBag.AnsweredQuesCount</div> </a>
                <a href="~/Masters/AllQuestions/3" title="Total UnAnswered Questions" class="unansred"> <div>  @ViewBag.UnAnsweredQuesCount</div></a>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="sub-box subb-box">
            <a href="~/Settings/TicketIndex/0">
